generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         BigInt   @id
  name       String
  email      String
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("users")
}

model Platform {
  id         BigInt   @id
  name       String
  image      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("platforms")
}
